@model CustomerRegisterViewModel


<div id="wrapperContent">
    <h2>@Resources.Resources.Register</h2>

    <input type="hidden" id="hiddenActionUrl" value="@Url.Action()" />


    @ViewBag.Message
    @using (Html.BeginForm("Register", "CustomerStore", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>@Resources.Resources.CreateNewAccount</h4>
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.UserName
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.Password
            </div>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.ConfirmPassword
            </div>
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.Name
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.LastName
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.Address
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.City
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.Email
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.Phone
            </div>
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="@Resources.Resources.Register" />
            </div>
        </div>
    }
    @Html.ActionLink(@Resources.Resources.TopProducts, "TopProducts", "Store", null, new { @class = "btn btn-primary btn-lg" })
</div>






@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
