@model ShoppingCartIndexViewModel

<div id="" class="">
    <div class="col-md-5">
        <table class="table table-bordered">
            <tr>
                <td>@Html.ActionLink(@Resources.Resources.CartDetails, "ShoppingCartDetails", "Store")</td>
                <td>@Resources.Resources.Products: @Model.TotalProductCount</td>
                <td>@Resources.Resources.TotalPrice: @Model.TotalOrderPrice </td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        @{
            if (ViewBag.NoItemsMessage != null)
            {
                <div class="alert alert-warning">@Resources.Resources.NoItemsMessage</div>
            }
        }

    </div>


</div>
