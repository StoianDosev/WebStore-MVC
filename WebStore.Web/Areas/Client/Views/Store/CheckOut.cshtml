@model OrderViewModel

<h2>@Resources.Resources.CheckOut</h2>

<input type="hidden" id="hiddenActionUrl" value="@Url.Action()" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
            
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.Name
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.FirstName)
                @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.LastName
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.LastName)
                @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.Address
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address)
                @Html.ValidationMessageFor(model => model.Address)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.Phone
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone)
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.Email
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2 control-label">
                @Resources.Resources.City
            </div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.City)
                @Html.ValidationMessageFor(model => model.City)
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Resources.Resources.Confirm" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<div>
    <div class="col-md-offset-9 col-md-3">
        @Html.ActionLink(@Resources.Resources.BackToCart, "ShoppingCartDetails", "Store", null, new { @class = "btn btn-danger" })
    </div>
</div>


<table class="table">
    <tr class="alert-info">
        <th>
            @Resources.Resources.ProductName
        </th>
        <th>
            @Resources.Resources.ProductCode
        </th>
        <th>
            @Resources.Resources.Quantity
        </th>
        <th>
            @Resources.Resources.UnitPrice
        </th>
        <th></th>
    </tr>
    @{
        foreach (var item in Model.OrderDetailsViewModel)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PruductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>

            </tr>
        }
    }
    <tr class="">
        <td>Total</td>
        <td></td>
        <td></td>
        <td>@Model.TotalPrice</td>
    </tr>
</table>